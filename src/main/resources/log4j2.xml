<Configuration status="INFO">
 <Appenders>
	  <Console name="Console" target="SYSTEM_OUT">
	  	<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p [%t] %c{2} - %m%n" />
	  </Console>
	  
      <File name="logFile" fileName="/app/sqlite/similarity/tool10Logs.log">
      <PatternLayout>
         <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      </File>
  <!--
	  <JDBC name="Database" tableName="logs">
		   <DriverManager connectionString="jdbc:sqlite:/app/sqlite/similarity/tool10Log.db"
		       driverClassName="org.sqlite.JDBC" />
		   	<Column name="timestamp" isEventTimestamp="true" />
			<Column name="loglevel" pattern="%p" isUnicode="false"/>
			<Column name="message" pattern="%m" isUnicode="false"/>
			<Column name="exception" pattern="%ex" isUnicode="false"/>
			<Column name="thread" pattern="%t" isUnicode="false"/>  
	  </JDBC>
  -->
 </Appenders>
 <Loggers>
  <Root level="debug">
   <AppenderRef ref="Console"/>
   <AppenderRef ref="Database"/>
  </Root>
 </Loggers>
</Configuration>
